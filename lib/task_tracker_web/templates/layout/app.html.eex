<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>TaskTracker Â· Phoenix Framework</title>
    <link rel="stylesheet" href="<%= Routes.static_path(@conn, "/css/app.scss") %>"/>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Tasks</a>

      <!-- my tasks -->
      <!-- all tasks -->

      <div class="col-4">
        <%= if @current_user do %>
            <p class="my-3">
              User: <%= @current_user.username %> |
              <%= link("Logout", to: Routes.session_path(@conn, :delete),
                method: :delete) %>
            </p>
        <% end %>
      </div>
    </nav>


    <div class="row">
      <div class="col-8">
        <%= render @view_module, @view_template, assigns %>
      </div>

      <div class="col-4">
        <%= if @current_user do %>
          <!-- display tasks? -->
          <%= Routes.task_path(@conn, :show_all) %>
        <% else %>
          <%= form_for @conn, Routes.session_path(@conn, :create),
                  [class: "form-inline"], fn f -> %>
            <%= text_input f, :username, class: "form-control" %>
            <%= submit "Login", class: "btn btn-secondary" %>
          <% end %>
          <p><%= link "or Register", to: Routes.user_path(@conn, :new) %></p>
        <% end %>
      </div>
    </div>

    <script type="text/javascript" src="<%= Routes.static_path(@conn, "/js/app.js") %>"></script>
  </body>
</html>
